<div class="header__desc">
	<a href="/" class="logo">
		<img src="img/logo.svg" alt="Digitex">
	</a>
	<div class="status status--success">Testnet</div>
	<nav class="main-nav">
		<ul class="nav">
			{% for item in navLinks %}
				{% if loop.index == 5 %}
					<li class="active">
						<a href="">{{item}}</a>
					</li>
				{% else %}
					<li>
						<a href="">{{item}}</a>
					</li>
				{% endif %}
			{% endfor %}
		</ul>
	</nav>

	<div class="top-bar">
		<div class="user-info">
			<div class="user-info__balance balance">
				<div class="balance__label">Your Balance:</div>
				<div class="balance__value">
					<div class="balance__amount">20,000</div>
					<div class="balance__currency">dgtx</div>
				</div>
			</div>
			<div class="user-info__btn">
				<a href="" class="btn">Load Up</a>
			</div>
			<div class="user-info__actions">
				<a href="" class="icon icon-settings" title="Настройки">
					<svg width="22px" height="22px" class="">
						<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="img/icon-svg/sprite/sprite.svg#icon-settings"></use>
					</svg>
				</a>
				<a href="" class="icon icon-entries" title="Выйти">
					<svg width="22px" height="22px" class="">
						<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="img/icon-svg/sprite/sprite.svg#icon-entries"></use>
					</svg>
				</a>
			</div>
		</div>
	</div>
</div>
